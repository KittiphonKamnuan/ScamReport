# Prisma Database Configuration
# Copy this file to .env and fill in your database credentials

# Database URL format:
# postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA

DATABASE_URL="postgresql://username:password@localhost:5432/scamreport?schema=public"

# Example for AWS RDS:
# DATABASE_URL="postgresql://admin:yourpassword@your-db.xxxxx.us-east-1.rds.amazonaws.com:5432/scamreport?schema=public&sslmode=require"

# For development with local PostgreSQL:
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/scamreport_dev?schema=public"

# Shadow database URL (required for migrations in production)
# SHADOW_DATABASE_URL="postgresql://username:password@localhost:5432/scamreport_shadow?schema=public"
